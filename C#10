using System;
namespace tool
{
	class toprog
	{
		static void Main(string[] args)
		{
			Console.Title="C# ";
			Console.BackgroundColor=ConsoleColor.Black;
			Console.ForegroundColor=ConsoleColor.Yellow;
			int i,j;
			for(i=1;i<=5;i++)
			{
				for(j=5;j>=i;j--)					
				Console.Write("*");
				Console.Write("\n");
			}
			Console.ReadKey();
		}
	}
}
